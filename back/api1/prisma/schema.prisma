// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  tokenBalance  Int       @default(0) // Tokens restants
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  videos        Video[]
  transactions  Transaction[]
  payments      Payment[]
  
  @@index([email])
}

model Video {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  prompt      String   @db.Text
  status      VideoStatus @default(PENDING)
  
  // Paramètres de génération
  duration    Int      @default(5) // secondes
  resolution  String   @default("720p")
  style       String?
  
  // Résultat
  videoUrl    String?
  thumbnailUrl String?
  
  // Coûts
  tokenCost   Int
  
  // Métadonnées
  errorMessage String?  @db.Text
  aiProvider   String?
  aiJobId      String?
  
  createdAt   DateTime @default(now())
  completedAt DateTime?
  
  @@index([userId, createdAt])
  @@index([status])
}

enum VideoStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      TransactionType
  amount    Int      // Tokens (positif = crédit, négatif = débit)
  balance   Int      // Solde après transaction
  reference String?  // ID vidéo ou payment
  
  createdAt DateTime @default(now())
  
  @@index([userId, createdAt])
}

enum TransactionType {
  PURCHASE
  VIDEO_GENERATION
  REFUND
  BONUS
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  stripePaymentId String   @unique
  amount          Int      // En centimes (€)
  tokensPurchased Int
  status          PaymentStatus @default(PENDING)
  
  createdAt       DateTime @default(now())
  completedAt     DateTime?
  
  @@index([userId])
  @@index([stripePaymentId])
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}
